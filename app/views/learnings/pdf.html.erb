<div class="form" style="max-width: 400px; margin: 50px auto; background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
    <div id="successMessage" style="display: none; margin-top: 20px;">
      <div class="alert alert-success">
        Registration successful!
      </div>
    </div>
    <%= form_for @registration, url: registration_index_url(@registration) do |f| %>
    <h2>Registration Form</h2>
    <form id="registrationForm" action="#" method="post">
        <div class="regis_form">
            <%= f.label :your_name, "Your_name<span class='text-danger'>*</span>".html_safe %>
            <%= f.text_field :your_name, class: "form-control", placeholder: "Enter your first name" %>
        </div>
        <div class="regis_form">
            <%= f.label :email, "Email<span class='text-danger'>*</span>".html_safe %>
            <%= f.text_field :email, class: "form-control", placeholder: "Type your email here" %>
        </div>
        <div class="regis_form">
            <%= f.label :phone_number, "Phone_number<span class='text-danger'>*</span>".html_safe %>
            <%= f.text_field :phone_number, class: "form-control", placeholder: "Type your phone_number here" %>
        </div>
        <div class="regis_form">
            <%= f.label :company_name %>
              <%= f.text_field :company_name, class: "form-control", placeholder: "Type your company_name here" %>
        </div>
        <div class="regis_form">
            <%= f.label :college_name %>
              <%= f.text_field :college_name, class: "form-control", placeholder: "Type your college_name here" %>
        </div>
        <br>
        <div class="regis_form">
            <%= f.button "Submit", id: "submitBtn", class: "btn btn-primary", style: "margin-bottom: 12px; width: 49%; margin-left: 101px;" %>      
        </div>
    </form>
    <% end %>
</div>
<%= render 'footer' %>
</body>
</html>

<script>
  document.getElementById("submitBtn").addEventListener("click", function(event) {
    var yourName = document.getElementById("registration_your_name").value;
    var email = document.getElementById("registration_email").value;
    var phoneNumber = document.getElementById("registration_phone_number").value;

    if (yourName.trim() === "" || email.trim() === "" || phoneNumber.trim() === "") {
      alert("Please fill in all fields.");
      event.preventDefault(); // Prevent form submission
    } else {
      // Show success message
      document.getElementById("successMessage").style.display = "block";

      // Redirect to home page after 2 seconds
      setTimeout(function() {
        window.location.href = "<%= root_path %>";
      }, 2000);
    }
  });
</script>

