<h1>Forgot Password</h1>

<%= form_tag forgot_password_path, method: :post do %>
  <div class="field">
    <%= label_tag :email, "Email Address" %>
    <%= email_field_tag :email, nil, class: "form-control", required: true %>
  </div>

  <div class="field btn">
    <%= submit_tag "Reset Password", class: "btn-submit" %>
  </div>
<% end %>